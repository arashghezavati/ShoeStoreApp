<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shoe_name_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sport Shoes"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold|italic"  />

    <TextView
        android:id="@+id/company_name_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Comapny : Puma" />

    <TextView
        android:id="@+id/shoe_size_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size : 42" />

    <TextView
        android:id="@+id/description_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="Description : best shoe in the world that make people happy" />

</LinearLayout>
</layout>